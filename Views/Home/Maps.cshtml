@{
    ViewData["Title"] = "Maps";
}

  <head>
    <h5>Find your home to find the bioregion to which you belong.</h5>
  </head>
  <body>
    
    <div class="grid-container">
        <div class='grid-1'>
          <div class='sidebar'>
            <h2>Base Layers</h2>
            <input type = 'radio' name='baselayerRadiobtn' value = 'osm' checked>Open street map<br>
            <input type = 'radio' name = 'baselayerRadiobtn' value = 'biomes'>Vegetation map<br>
          </div>
        </div>
        <div class='grid-2'>
            <div id="map" class="map">
        </div>
    </div>

  
    <div id="throbber">
      <img
        src="https://upload.wikimedia.org/wikipedia/commons/d/de/Ajax-loader.gif"
        alt="Spinning wheel">
    </div>

    <div id="info">&nbsp;</div>
    <script type = "module" src="/js/webpackBundle.js" ></script>
    <div id="BiomeModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2 id = "homebiome">Biome region not found</h2>
          <span class="close" id = "closeModal">&times;</span>
        </div>
        <div class="modal-body">
          <p>Some text that will link to the DB</p>
        </div>
        <div class="modal-footer">
          <button id="plantpathway" class="btn btn-primary">Which plants should I plant?</button>
        </div>
      </div>
    </div>
  </body>



